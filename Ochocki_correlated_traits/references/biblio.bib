	keywords = {Breeder's equation, G matrix evolution, matrix comparison, selection skewers},
	pages = {2627--2635}
}

@article{eroukhmanoff_evolution_2011,
	title = {Evolution and stability of the {G}-matrix during the colonization of a novel environment},
