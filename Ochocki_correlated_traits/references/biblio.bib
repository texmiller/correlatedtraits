@article{colautti_is_2004,
	title = {Is invasion success explained by the enemy release hypothesis?},
	volume = {7},
	issn = {1461-0248},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1461-0248.2004.00616.x/abstract},
