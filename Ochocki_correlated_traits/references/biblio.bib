	journal = {Ecology and Evolution},
	author = {Novak, Sebastian},
	year = {2014},
	keywords = {Balanced dispersal, Migration, ideal free distribution, relatedness, spatial variability},
	pages = {4589--4597}
}

@article{van_belleghem_evolutionary_2015,
	title = {Evolutionary history of a dispersal-associated locus across sympatric and allopatric divergent populations of a wing-polymorphic beetle across {Atlantic} {Europe}},
	copyright = {© 2014 John Wiley \& Sons Ltd},
	issn = {1365-294X},
