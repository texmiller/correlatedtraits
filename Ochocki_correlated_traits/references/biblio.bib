	author = {Jongejans, Eelke and Skarpaas, Olav and Ferrari, Matthew J. and Long, Eric S. and Dauer, Joseph T. and Schwarz, Carrie M. and Rauschert, Emily S. J. and Jabbour, Randa and Mortensen, David A. and Isard, Scott A. and Lieb, David A. and Sezen, Zeynep and Hulting, Andrew G. and Shea, Katriona},
	month = dec,
