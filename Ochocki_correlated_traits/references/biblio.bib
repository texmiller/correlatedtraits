	pages = {1363--1373}
}

@article{roff_there_2012,
	title = {There is more than one way to skin a {G} matrix},
	volume = {25},
	issn = {1420-9101},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1420-9101.2012.02500.x/abstract},
