	journal = {Proceedings of the Royal Society B: Biological Sciences},
	author = {Debeffe, L. and Morellet, N. and Bonnot, N. and Gaillard, J. M. and Cargnelutti, B. and Verheyden-Tixier, H. and Vanpé, C. and Coulon, A. and Clobert, J. and Bon, R. and Hewison, A. J. M.},
	month = sep,
