@article{fraser_range_2015,
	title = {Range expansion of an invasive species through a heterogeneous landscape – the case of {American} mink in {Scotland}},
	copyright = {© 2015 The Authors. Diversity and Distributions published by John Wiley \& Sons Ltd., This is an open access article under the terms of the Creative Commons Attribution License, which permits use, distribution and reproduction in any medium, provided the original work is properly cited.},
