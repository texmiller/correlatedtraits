@article{carroll_impacts_2003,
	title = {Impacts of {Landscape} {Change} on {Wolf} {Restoration} {Success}: {Planning} a {Reintroduction} {Program} {Based} on {Static} and {Dynamic} {Spatial} {Models}},
	volume = {17},
	issn = {1523-1739},
	shorttitle = {Impacts of {Landscape} {Change} on {Wolf} {Restoration} {Success}},
