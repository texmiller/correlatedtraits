	number = {12},
	urldate = {2015-01-07TZ},
	journal = {Ecography},
	author = {Snell, R. S. and Huth, A. and Nabel, J. E. M. S. and Bocedi, G. and Travis, J. M. J. and Gravel, D. and Bugmann, H. and Gutiérrez, A. G. and Hickler, T. and Higgins, S. I. and Reineking, B. and Scherstjanoi, M. and Zurbriggen, N. and Lischke, H.},
	year = {2014},
	pages = {1184--1197}
}

@article{nobis_kissmig_2014,
