	journal = {Ecology Letters},
	author = {Valladares, Fernando and Matesanz, Silvia and Guilhaumon, François and Araújo, Miguel B. and Balaguer, Luis and Benito-Garzón, Marta and Cornwell, Will and Gianoli, Ernesto and van Kleunen, Mark and Naya, Daniel E. and Nicotra, Adrienne B. and Poorter, Hendrik and Zavala, Miguel A.},
