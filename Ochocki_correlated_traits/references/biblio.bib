	keywords = {Correlational selection, Evolutionary Biology, Human Genetics, Lifetime fitness, Parus major, Personality, Plant Sciences, natal dispersal},
	pages = {1--20}
}

@article{saltre_how_2014,
	title = {How climate, migration ability and habitat fragmentation affect the projected future distribution of {European} beech},
